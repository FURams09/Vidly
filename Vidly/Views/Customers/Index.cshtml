@model IEnumerable<Vidly.Models.Customer>
@{
	ViewBag.Title = "Customer";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (!Model.Any())
{
	<p>There are no movies added</p>
}
else
{
	<table>
		<thead>
			<tr><th>Customer</th></tr>
		</thead>
		@foreach (var cust in Model)
		{
			<tr>
				<td>@Html.ActionLink(cust.Name, "Details", "Customers", new { id = cust.ID }, null)</td>
			</tr>
		}
	</table>
}
