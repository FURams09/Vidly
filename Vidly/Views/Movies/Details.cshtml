@model  Vidly.Models.Movie
@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
	<li>Genre: @Model.Genre.GenreName</li>
	<li>Release Date: @String.Format("{0:MMMM dd, yyyy}", Model.ReleaseDate)</li>
	<li>Date Added: @String.Format("{0:MMMM dd, yyyy}", Model.DateAdded)</li>
	<li>Number In Stock: @Model.NoAvailable</li>
</ul>

