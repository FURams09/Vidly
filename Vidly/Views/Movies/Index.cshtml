@model IEnumerable<Vidly.Models.Movie>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!Model.Any())
{
	<p>There are no Customers</p>
}
else
{
	<table class="table table-bordered table-hover">
		<thead><tr><th>Movies</th></tr></thead>
		<tbody>
			@foreach (var movie in Model)
			{
				<tr>
					<td>@movie.Name</td>
				</tr>
			}
		</tbody>
	</table>
}


